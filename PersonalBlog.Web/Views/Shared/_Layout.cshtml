@{
    ViewData["Title"] = "PersonalBlog";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - PersonalBlog</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>

<!-- HEADER -->
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">PersonalBlog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="UserView" asp-action="Index">Пользователи</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="RoleView" asp-action="Index">Роли</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="ArticleView" asp-action="Index">Статьи</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="CommentView" asp-action="Index">Комментарии</a></li>
                </ul>
                <button id="logoutBtn" class="btn btn-outline-light">Выход</button>
            </div>
        }
        else
        {
            <a class="btn btn-outline-light" href="/AccountView/Login">Вход</a>
        }
    </nav>
</header>

<!-- MAIN CONTENT -->
<div class="container mt-4">
    @RenderBody() <!-- Здесь будут выводиться Views -->
</div>

<!-- FOOTER -->
<footer class="bg-dark text-light mt-5 p-4 text-center">
    <p>&copy; @DateTime.Now.Year PersonalBlog. Все права защищены.</p>
</footer>

@Html.AntiForgeryToken()
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
<script>
document.getElementById("logoutBtn").addEventListener("click", async () => {
    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

    await fetch('/AccountApi/logout', {
        method: 'POST',
        headers: {
            'RequestVerificationToken': token
        }
    });

    window.location.href = '/';
});
</script>
</body>
</html>
