@{
    ViewData["Title"] = "Роли";
    Layout = "_Layout";
}

<h2>Все роли</h2>

<ul id="roleList" class="list-group"></ul>

<script>
async function loadRoles() {
    const res = await fetch("/api/role/all");
    const roles = await res.json();
    const list = document.getElementById("roleList");
    list.innerHTML = "";
    roles.forEach(r => {
        list.innerHTML += `<li class="list-group-item">
            ${r.roleName} - ${r.description}
            <a class="btn btn-sm btn-primary float-right" href="/RoleView/Edit/${r.id}">Редактировать</a>
        </li>`;
    });
}
loadRoles();
</script>